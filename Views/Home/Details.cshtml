@model MvcLaptop.Models.Product

@{
    ViewData["Title"] = Model.Title;
}
<div class="container">
    <div class="details-container">
        <div class="details-image">
            @if (Model.ProductImages != null && Model.ProductImages.Any())
            {
                @foreach (var image in Model.ProductImages)
                {
                    <img src="@image.ImageUrl" 
                         alt="@Model.Title" 
                         class="product-image mb-3"
                         style="max-width: 100%; height: 200px; border: @(image.IsMainImage ? "2px solid red" : "1px solid #ccc"); border-radius: 5px;" />
                }
            }
            else
            {
                <p class="text-muted">No images available for this product.</p>
            }
        </div>
        <div class="details-info">
            <h1>@Model.Title</h1>
            <p><strong>Danh mục:</strong> @Model.Category?.Name_Category</p>
            <p><strong>Giá sản phẩm:</strong> @Model.FormattedPrice</p>
            <p><strong>Thông tin sản phẩm:</strong></p>
             <!-- Các nút hành động -->
            <div class="action-buttons">
                <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@Model.Id" class="btn btn-add-to-cart">Add to Cart</a>
                <a asp-controller="Cart" asp-action="BuyNow" asp-route-id="@Model.Id" asp-route-quantity="1" class="btn btn-buy-now">Buy Now</a>
            </div>
            <p><strong>Thông tin sản phẩm:</strong></p>
            <p>@Html.Raw(string.IsNullOrEmpty(Model.Description) ? "Không có mô tả cho sản phẩm này." : Model.Description)</p>
        </div>
    </div>
</div>
