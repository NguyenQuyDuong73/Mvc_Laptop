@model MvcLaptop.Models.User

@{
    ViewData["Title"] = "Gán vai trò";
}

<h1>Gán vai trò cho người dùng</h1>

<form asp-action="AssignRole" method="post">
    <input type="hidden" name="userId" value="@Model.Id" />
    <div class="form-group">
        <label for="role">Chọn vai trò</label>
        <select class="form-control" id="role" name="role">
            @foreach (var role in ViewBag.Roles)
            {
                <option value="@role.Name">@role.Name</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Gán vai trò</button>
</form>
