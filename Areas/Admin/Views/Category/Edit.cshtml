@model MvcLaptop.Models.Category

@{
    ViewData["Title"] = "Edit Category";
}

<h2>Chỉnh sửa hãng sảm phẩm</h2>

<hr />
<form asp-action="Edit" method="post">
    <input type="hidden" name="CategoryId" value="@Model.CategoryId" />
    <div class="form-group">
        <label asp-for="Name_Category" class="control-label">Tên hãng</label>
        <input asp-for="Name_Category" class="form-control" />
        <span asp-validation-for="Name_Category" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Giới thiệu</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Lưu</button>
    </div>
</form>

<a href="@Url.Action("Index")">Quay lại</a>
