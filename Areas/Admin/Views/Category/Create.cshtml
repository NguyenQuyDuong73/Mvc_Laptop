@model MvcLaptop.Models.Category

@{
    ViewData["Title"] = "Create Category";
}

<h2>Thêm hãng sảm phẩm</h2>


<hr />
<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name_Category" class="control-label">Tên hãng</label>
        <input asp-for="Name_Category" class="form-control" />
        <span asp-validation-for="Name_Category" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Giới thiệu</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Thêm</button>
    </div>
</form>

<a href="@Url.Action("Index")">Quay lại</a>
